<h1>Listing viagens</h1>

<table>
  <tr>
    <th>Titulo</th>
    <th>Origem</th>
    <th>Destino</th>
    <th>Distancia</th>
    <th>Saida</th>
    <th>Retorno</th>
    <th>Motora</th>
    <th>Valor contrato</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @viagens.each do |viagem| %>
  <tr>
    <td><%= viagem.titulo %></td>
    <td><%= viagem.origem %></td>
    <td><%= viagem.destino %></td>
    <td><%= viagem.distancia %></td>
    <td><%= viagem.saida %></td>
    <td><%= viagem.retorno %></td>
    <td><%= viagem.motora %></td>
    <td><%= viagem.valor_contrato %></td>
    <td><%= link_to 'Show', viagem %></td>
    <td><%= link_to 'Edit', edit_viagem_path(viagem) %></td>
    <td><%= link_to 'Destroy', viagem, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

