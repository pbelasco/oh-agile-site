= form_for @habilidade do |f|
  - if @habilidade.errors.any?
    #error_explanation
      %h2= "#{pluralize(@habilidade.errors.count, "error")} prohibited this habilidade from being saved:"
      %ul
        - @habilidade.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :nome
    = f.text_field :nome
  .field
    = f.label :tipo
    = f.text_field :tipo
  .actions
    = f.submit 'Save'
